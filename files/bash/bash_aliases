alias mkd='mkdir -pv'
alias ssdn='sudo shutdown -P now'

alias pictrl='bash ~/rpi/bin/pictrl.sh'

# List Directory Contents
alias l='ls -l'
alias ll='ls -alh'
alias la='ls -A'

# Clear Screen / Directory Contents Combo
alias ct='c; tree'
alias cl='c; ls -l'
alias cls='c;ls'
alias cll='c;ll'
alias cla='c;la'
alias cdc='cd;cls'
alias cdd='cd ~/Documents;ls'
alias cdp='cd ~/Documents/Charter/projects;ls'

# Mods
alias x='chmod +x'

# VIM
alias v='vim'
alias vi='vim'

# TMUX
alias ts='tmux ls'
alias tn='tmux new -s'
alias ta='tmux a -t'

# Python
alias py='python3'
alias pypip='pip3 install'

# GIT
alias gc='git clone'
alias gs='git status'
alias ga='git add'
alias gp='git pull'
alias gaa='git add --all'
alias gcm='git commit -m'
alias gpu='git push'
alias gpom='gp && git push origin master' # git push origin master prefaced with git pull
alias gu='gs && gp && gpu' # git update checks status, pulls, and pushes if needed

# Vagrant
#alias vu='vagrant up'
