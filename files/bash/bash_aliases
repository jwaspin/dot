# Network
alias wanip='dig +short myip.opendns.com @resolver1.opendns.com'

# Functions
alias fz='fzf-tmux'

inst() { 
    platform='unknown'
    unamestr=`uname`
    if [[ "$unamestr" == 'Linux' ]]; then
        platform='linux'
    elif [[ "$unamestr" == 'Darwin' ]]; then
        platform='mac'
    fi

    if [[ $platform == 'mac' ]]; then
        brew install $1
    else
        sudo apt-get install -y $1
    fi
}

sshfind() {
    IP="$1"
    nmap -Pn -p22 $IP | grep -B 4 open
}
