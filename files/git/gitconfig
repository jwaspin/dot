[pull]
	rebase = true
[user]
	name = YOUR_NAME
	email = YOUR_EMAIL
	signingkey = YOUR_SIGNING_KEY
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[credential]
	helper = osxkeychain
[gpg]
	program = /opt/homebrew/bin/gpg

[core]
	editor = vim
	excludesfile = ~/.gitignore_global

[alias]
	s = status
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[include]
	path = ~/.gitconfig.local
